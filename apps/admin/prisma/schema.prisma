generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Quotes    Quotes[]
}

enum Language {
  English
  Hindi
  Tamil
  Telegu
}

enum Status {
  INREVIEW
  APPROVED
}

model Quotes {
  id       String   @id @default(uuid())
  movie    String
  quote    String
  language Language
  year     String
  userId   String
  status   Status
  user     User     @relation(fields: [userId], references: [id])
}